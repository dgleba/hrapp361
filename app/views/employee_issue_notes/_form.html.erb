<%= simple_form_for(@employee_issue_note) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :issue %>
    <%= f.association :employee %>
    <%= f.input :name_if_not %>
    <%= f.input :date_of_issue %>
    <%= f.input :comment %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success'%>
  </div>
<% end %>
