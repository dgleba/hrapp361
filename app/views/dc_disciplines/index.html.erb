
<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <h4>Disciplines</h4>
  </div>

  <div class="col-sm-2 ">
    <p><span style="background-color: #ffcc99;">Use <strong>Administer</strong> section to create/edit</span></p>

    <%#= [commented out by dgleba] link_to 'Create', new_dc_discipline_path , class: "btn btn-success"%>
  </div>


  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :employee_name_or_employee_clock_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @dc_disciplines %>
  </div>
  
  <div class="col-sm-2 ">
    <%= page_entries_info @dc_disciplines, :entry_name => 'item' %>
  </div>
  
</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th colspan="1"></th>
      <th>ID</th>
      <th>Date discipline</th>
      <th>Employee</th>
      <th>Discipline by</th>
      

    </tr>
  </thead>

  <tbody>
    <% @dc_disciplines.each do |dc_discipline| %>
      <tr>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', dc_discipline, class: "btn btn-info", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Sign-it', edit_dc_discipline_path(dc_discipline), class: "btn btn-primary", :style=>'color:#FFFFFF;' %>
          <%#= [commented out by dgleba] link_to 'Destroy', dc_discipline, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %>
          </div>
        </td>
        
        <td><%= if dc_discipline.output then '.' else 'unsigned' end %></td>
        <td><%= dc_discipline.id %></td>
        <td><%= dc_discipline.date_discipline %></td>
        <td><%= dc_discipline.employee %></td>
        <td><%= dc_discipline.discipline_by %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
