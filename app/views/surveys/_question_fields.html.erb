<div class="nested-fields">
  <div class="field">
    <hr style=" height:0px; border:none; color:green; background-color:#333; border-bottom: 4px solid red; " />
  </div>

  <div class="field">
          <%= f.label :question_list_id %>
          <%= f.collection_select :question_list_id, QuestionList.all, :id, :question_list_name2,  { prompt: true }, { :class => 'dgselect2' }  %>
    </div>
    
  <div class="field">
  <%= f.label "Type:"%><%= f.select :qtype, [
      ["Short Answer", "short_answer"],
      ["Yes/No", "select_yes_no"],
      ["Part Number Select", "select_part_number"]
    ] %>
  </div>

  <div class="field">
    <%= f.label "Question Special Note:"%><%= f.text_field :question_note, class: 'form-control' %>
  </div>

  <%= link_to_remove_association "remove question", f %>
</div>
