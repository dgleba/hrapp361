<%= simple_form_for(@at_employee_note) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.association :employee %>
    <%= f.input :name_if_not %>
    <%= f.input :issue %>
    <%= f.input :date_if_not_today %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success'%>
  </div>
<% end %>
